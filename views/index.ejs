<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>
    <body>
                    <!-- ========== section start ========== -->
                    <div class="notification-wrapper ">
                        <div class="container-fluid style-destroyer">
                            <!-- ========== title-wrapper start ========== -->
                            <div class="title-wrapper pt-30">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="title mb-30">
                                            <h2>Messages</h2>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->
                            </div>
                            <!-- ========== title-wrapper end ========== -->

                            <div class="card-style">
                                <% for(let m of messages){ %> 
                                <div class="single-notification">
                                    <div class="checkbox">
                                        <div class="form-check checkbox-style mb-20">
                                            <input class="form-check-input" type="checkbox" value="" id="checkbox-1" />
                                        </div>
                                    </div>
                                    <div class="notification">
                                        <div class="image warning-bg">
                                            <span><%= m.username.substr(0, 1).toUpperCase() %> </span>
                                        </div>
                                        <a href="#0" class="content">
                                            <h6><%= m.username %> </h6>
                                            <p class="text-sm text-gray">
                                                <%= m.comment %> 
                                            </p>
                                            <span class="text-sm text-medium text-gray">25 min ago</span>
                                        </a>
                                    </div>
                                    <div class="action">
                                        <form  method="POST" action="/<%= m.id %>?_method=DELETE">
                                            <button class="delete-btn">
                                                <i class="lni lni-trash-can"></i>
                                            </button>
                                        </form>
                                        <button class="more-btn dropdown-toggle" id="moreAction"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="lni lni-more-alt"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="moreAction">
                                            <li class="dropdown-item">
                                                <a href="/<%= m.id %>/details " class="text-gray">More Details</a>
                                            </li>
                                            <li class="dropdown-item">
                                                <a href="/<%= m.id %>/update " class="text-gray">Edit</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <% } %> 
                            </div>
                            <div class="card-style mb-30">
                                <a href="/create"
                                class="main-btn active-btn rounded-full btn-hover">+ New</a>
                        </div>
                        </div>
                        <!-- end container -->
                        
                    </div>
                    <!-- ========== section end ========== -->
            <%- include('partials/scripts') %>
    </body>

</html>